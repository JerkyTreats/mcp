{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Go: Build",
      "type": "shell",
      "command": "cd ${workspaceFolder} && go build ./...",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Go: Test",
      "type": "shell",
      "command": "cd ${workspaceFolder} && go test ./...",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Go: Run",
      "type": "shell",
      "command": "cd ${workspaceFolder} && go run main.go",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$go"]
    }
  ]
}
